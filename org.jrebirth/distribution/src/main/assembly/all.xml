<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd"
>

	<id>package-all</id>

	<formats>
		<!-- <format>zip</format> -->
		<format>tar.gz</format>
		<!-- <format>tar.bz2</format> -->
	</formats>

	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>JRebirth-${project.version}</baseDirectory>


	<fileSets>

		<!-- oooooooooo -->
		<!-- Analyzer Tool -->
		<!-- oooooooooo -->
		<fileSet>
			<directory>../analyzer/target/jnlp</directory>
			<outputDirectory>Analyzer</outputDirectory>
		</fileSet>

		<!-- oooooooooo -->
		<!-- Showcases -->
		<!-- oooooooooo -->
		<fileSet>
			<directory>../showcase/fxml/target/jnlp</directory>
			<outputDirectory>Showcases/fxml</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../showcase/undoredo/target/jnlp</directory>
			<outputDirectory>Showcases/undoredo</outputDirectory>
		</fileSet>

	</fileSets>

	<moduleSets>

		<!-- oooooooooo -->
		<!-- APIDOCS -->
		<!-- oooooooooo -->
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.jrebirth:core:</include>
				<include>org.jrebirth:presentation:</include>
				<include>org.jrebirth:component:</include>
				<include>org.jrebirth:transition:*</include>
				<!-- <include>org.jrebirth:undoredo:*</include> -->
			</includes>

			<!-- Javadoc -->
			<binaries>
				<!-- <outputFileNameMapping>apidocs/${module.artifactId}</outputFileNameMapping> -->
				<attachmentClassifier>javadoc</attachmentClassifier>
				<includeDependencies>false</includeDependencies>
				<outputDirectory>apidocs/${module.artifactId}</outputDirectory>
				<unpack>true</unpack>
			</binaries>
		</moduleSet>

		<!-- oooooooooo -->
		<!-- LIBS -->
		<!-- oooooooooo -->

		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.jrebirth:core:*</include>
				<include>org.jrebirth:component:*</include>
				<include>org.jrebirth:presentation:*</include>
				<include>org.jrebirth:transition:*</include>
				<!-- <include>org.jrebirth:undoredo:*</include> -->
			</includes>
			<binaries>
				<dependencySets>
					<dependencySet>
						<useTransitiveDependencies>true</useTransitiveDependencies>
						<useProjectArtifact>false</useProjectArtifact>
						<outputDirectory>/libs</outputDirectory>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>

		<!-- oooooooooo -->
		<!-- Root SITE -->
		<!-- oooooooooo -->
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org:jrebirth:*</include>
			</includes>

			<!-- Root site -->
			<binaries>
				<!-- <outputFileNameMapping>site/${module.artifactId}</outputFileNameMapping> -->
				<attachmentClassifier>site</attachmentClassifier>
				<includeDependencies>false</includeDependencies>
				<outputDirectory>site</outputDirectory>
				<unpack>true</unpack>
			</binaries>
		</moduleSet>

		<!-- oooooooooo -->
		<!-- SITE -->
		<!-- oooooooooo -->
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.jrebirth:core:*</include>
				<include>org.jrebirth:presentation:*</include>
				<include>org.jrebirth:component:*</include>
				<include>org.jrebirth:transition:*</include>
				<!-- <include>org.jrebirth:undoredo:*</include> -->
			</includes>

			<!-- Javadoc -->
			<binaries>
				<!-- <outputFileNameMapping>site/${module.artifactId}</outputFileNameMapping> -->
				<attachmentClassifier>site</attachmentClassifier>
				<includeDependencies>false</includeDependencies>
				<outputDirectory>site/${module.artifactId}</outputDirectory>
				<unpack>true</unpack>
			</binaries>
		</moduleSet>

		<!-- oooooooooo -->
		<!-- SOURCES -->
		<!-- oooooooooo -->
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.jrebirth:core:*</include>
				<include>org.jrebirth:presentation:*</include>
				<include>org.jrebirth:component:*</include>
				<include>org.jrebirth:transition:*</include>
				<!-- <include>org.jrebirth:undoredo:*</include> -->
			</includes>

			<!-- Sources -->
			<binaries>
				<!-- <outputFileNameMapping>sources/${module.artifactId}</outputFileNameMapping> -->
				<attachmentClassifier>sources</attachmentClassifier>
				<includeDependencies>false</includeDependencies>
				<outputDirectory>sources</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>

		<!-- oooooooooo -->
		<!-- JARS -->
		<!-- oooooooooo -->
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.jrebirth:core:*</include>
				<include>org.jrebirth:presentation:*</include>
				<include>org.jrebirth:component:*</include>
				<include>org.jrebirth:transition:*</include>
				<!-- <include>org.jrebirth:undoredo:*</include> -->
			</includes>

			<excludes>
				<exclude>*:javadoc</exclude>
				<exclude>*:sources</exclude>
				<exclude>*:site</exclude>
			</excludes>
			<sources>

			</sources>

			<!-- Jars -->
			<binaries>
				<!-- <outputFileNameMapping>${module.artifactId}</outputFileNameMapping> -->
				<includeDependencies>false</includeDependencies>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>


		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.jrebirth:sample:*</include>
			</includes>
			<excludes>
				<exclude>*:jar:*</exclude>
			</excludes>
		</moduleSet>
	</moduleSets>

</assembly>